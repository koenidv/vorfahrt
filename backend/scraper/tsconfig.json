{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "preserveSymlinks": true
  },
  "include": ["src/**/*.ts", "src/**/*.json", ".env"],
}
